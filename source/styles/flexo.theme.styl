// -- BASE ---------------------------------------------------------------------
body
  font-size                   : FONT_SIZE
  font-family                 : FONT_FAMILY
  color                       : COLOR
  background-color            : WHITE
  a
    color                     : COLOR
    text-decoration           : none

.bck
  position                    : relative
  margin                      : 0
  background-size             : cover !important
  background-position : 100% 0%
  &.dark
    color                     : WHITE
    background-color          : DARK
  &.white
    background-color          : WHITE
  &.grey
    background-color          : darken(WHITE, 5%)
  &.oizio
    background-image          : url("https://oiz.io/assets/img/landing.720p.jpg")
  &.filmit
    background-color          : #ffc414 !important
  &.omnia
    background-image          : url("http://omniacafe.com/assets/img/background.jpg")
  &.the8848
    background-image          : url("https://the8848.co/img/background.jpg")
  &.farmstory
    background-image          : url("http://farmstoryhouse.com/assets/img/background-landing.jpg")
  &.dots
    z-index                   : 0
    color                     : WHITE
    &:before
      content                 : ""
      z-index                 : 0
      position                : absolute
      top                     : 0
      right                   : 0
      left                    : 0
      width                   : 100%
      height                  : 100%
      background              : url("/assets/img/bck.dots.png") repeat top left
    > *
      z-index                 : 1

.color
  &.white
    color                     : WHITE
  &.theme
    color                     : THEME

// -- BUTTON -------------------------------------------------------------------
.button, button, input[type="submit"], input[type="reset"], input[type="button"]
  border                      : none
  > span
    margin-left               : (SPACE / 2)
  &.white
    border                    : solid 1px WHITE
    &, &:visited
      color                   : WHITE
    &:hover
      color                   : THEME
      background-color        : WHITE
  &.theme
    color                     : THEME
    border                    : solid 1px THEME
    &:hover, &:visited
      color                   : WHITE
      background-color        : THEME

// -- FORM ---------------------------------------------------------------------
input[type="email"], input[type="search"], input[type="text"], input[type="tel"],
input[type="url"], input[type="password"], textarea, select
  background-color            : WHITE
  border                      : 1px solid #D1D1D1
  border-radius               : BORDER-RADIUS
  & :focus
    border                    : 1px solid #33C3F0

// -- TABLE ---------------------------------------------------------------------
table
  th, td
    border-bottom             : 1px solid #E1E1E1

// -- CODE ---------------------------------------------------------------------
code
  background                  : darken(BACKGROUND, 5%)
  border                      : 1px solid darken(BACKGROUND, 10%)
  border-radius               : BORDER-RADIUS
